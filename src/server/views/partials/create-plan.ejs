<div class="bigContainer">
    <div class="smallContainer">
        <h3> Create Plan </h3>
        <form action="/users/<%=user.id%>/plans/new" method="POST" id="postPlanAndSearchPlace" class="formEdit" >
          <input type="text" name="name" class="textField" id="planName" placeholder="Plan Name" required>
          <select class="selectCity" name="location" id="planLocation" required>
            <option class="option" value="austin">Austin</option>
            <option vlaue="san_francisco">San Francisco</option>
            <option value="new_york">New York</option>
            <option value="seattle">Seattle</option>
            <option value="miami">Miami</option>
            <option value="chicago">Chicago</option>
          </select>
          <input type="text" name="date" class="textField" id="planDate" placeholder="Date" required="">
          <input type="text" name="keyword" value placeholder="Search">
          <button class="btn waves-effect waves-light submit" type="submit" value="create">Submit</button>
        </form>
    </div>
</div>
