<!DOCTYPE html>
<html lang="en">

    <head>
       <% include ../partials/head %>

  </head>
  <body>
    <% include ../partials/nav %>

    <div class="container">
      <header class="homePage">s
        <h3> Change your profile information</h3>
      </header>
      <div class="row">

      </div>
      <div class="bigContainer">
          <div class="smallContainer">
              <h3>Edit Your Profile</h3>
              <form class="formEdit" action="/users/profile/<%= user.id %>?_method=PATCH" method="POST">
                  <input type="hidden" name="id" value="<%= user.id %>">
                  <input type="text" value="<%= user.first_name %>" name="first_name" value placeholder="First Name">
                  <input type="text" value="<%= user.last_name %>" name="last_name" value placeholder="Last Name">
                  <input type="text" value="<%= user.username %>" name="username" value placeholder="Username">
                  <input type="text" value="<%= user.email %>" name="email" value placeholder="Email">
                  <input type="password" name="password" value placeholder="Password">
                  <button class="btn waves-effect waves-light" type="submit">Change Information</button>
              </form>
              <form method="POST" action="/users/profile/<%= user.id %>?_method=DELETE">
                <button type="submit">Delete user</button>
              </form>
          </div>
    </div>
    <!-- <footer><% include ../partials/footer %></footer> -->
  </body>
</html>
